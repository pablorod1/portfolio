---
interface Props {
  title: string;
  body: string;
  href: string;
  link: string;
}

const { href, title, body, link } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-lg">
  <div class="flex flex-row items-center gap-x-2 mb-2">
    <slot />
    <h3 class="text-2xl font-bold text-gray-900">{title}</h3>
  </div>
  <p class="text-gray-700">{body}</p>
  <a class="text-indigo-600
  hover:underline" href={href}>{link}</a>
</div>
